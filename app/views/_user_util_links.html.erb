<ul id="user_utility_links" class="nav navbar-nav navbar-right nav-main">
  <% if user_signed_in? %>
    <li>
      <%= render_notifications(user: current_user) %>
    </li>
    <li class="dropdown">
      <%= link_to hyrax.dashboard_profile_path(current_user), role: 'button', data: { toggle: 'dropdown' }, aria: { haspopup: true, expanded: false} do %>
        <span class="sr-only"><%= t("hyrax.toolbar.profile.sr_action") %></span>
        <span class="hidden-xs">&nbsp;<%= current_user.name %></span>
        <span class="sr-only"> <%= t("hyrax.toolbar.profile.sr_target") %></span>
        <span class="fa fa-user"></span>
        <span class="caret"></span>
      <% end %>
      <ul class="dropdown-menu dropdown-menu-right" role="menu">
        <li class="user-controls"><%= link_to t("hyrax.toolbar.dashboard.menu"), hyrax.dashboard_path %></li>

        <li class="divider user-controls"></li>
        <li class="user-controls"><%= link_to t("hyrax.toolbar.profile.logout"), main_app.destroy_user_session_path %></li>
      </ul>
    </li><!-- /.btn-group -->
  <% else %>
    <li>
			<% if current_page?(hyrax.root_path) %>
				<a class="active-menu">Home</a>
	    <% else %>
				<%= link_to t(:'hyrax.controls.home'), hyrax.root_path %>
			<% end %>
		</li>
    <li>
			<% if current_page?(hyrax.about_path) %>
				<a class="active-menu">About</a>
	    <% else %>
				<%= link_to t(:'hyrax.controls.about'), hyrax.about_path %>
			<% end %>
		</li>
    <li>
			<% if current_page?(hyrax.help_path) %>
				<a class="active-menu">Help</a>
	    <% else %>
				<%= link_to t(:'hyrax.controls.help'), hyrax.help_path %>
			<% end %>
	</li>
    <li>
			<% if current_page?(main_app.new_user_session_path) %>
				<span class="active-menu">
					<span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> <%= t("hyrax.toolbar.profile.login") %>
				</span>
	    <% else %>
				<%= link_to main_app.new_user_session_path do %>
				  <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> <%= t("hyrax.toolbar.profile.login") %>
        <% end %>
			<% end %>
    </li>
  <% end %>
</ul>
